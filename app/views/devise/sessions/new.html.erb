<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class:"form-control form-control-user", autofocus: true,  
                              id: "exampleInputEmail", placeholder: "Enter an email Address..." %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control form-control-user", id: "exampleInputPassword",
                                    placeholder:"Enter a password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="custom-control custom-checkbox small">
        <%= f.check_box :remember_me, class: "custom-control-input" %>
        <%= f.label :remember_me, class: "custom-control-label" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-primary btn-user btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
