<tr id="category_<%= category.id %>" >
  <td><%= category.name %></td>
  <td><%= category.description %></td>
  <td>
    <%# <button class= "btn btn-info" data-toggle="modal" data-target="#exampleModal">Editar</button> %>
    <%= link_to 'Editar', edit_category_path(category), id: 'editCategory', class: 'btn btn-info', remote: true %>
    <%= link_to 'Borrar', category, method: :delete, remote: true, class: 'btn btn-danger', data: {confirm: "are you sure? #{category.name}"} %>
  </td>
</tr>

<%= render 'modal' %>
